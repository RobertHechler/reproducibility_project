	urldate = {2023-01-09},
	journal = {Proceedings of the Royal Society B: Biological Sciences},
	author = {Peacock, Stephanie J. and Connors, Brendan M. and Krkošek, Martin and Irvine, James R. and Lewis, Mark A.},
