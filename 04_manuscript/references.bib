	keywords = {average fitness difference, Lotka–Volterra, natural enemy partitioning, niche overlap, permanence, scaling factors, species coexistence, stabilizing mechanism},
	pages = {1773--1794},
	file = {Full Text PDF:/Users/rhech/Zotero/storage/TEFYR8DX/Chesson - 2018 - Updates on mechanisms of maintenance of species di.pdf:application/pdf;Snapshot:/Users/rhech/Zotero/storage/3SD72NYF/1365-2745.html:text/html},
}

@article{warner_coexistence_1985,
